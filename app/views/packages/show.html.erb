<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Package</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to packages_path, class: button_class(theme: "transparent") do %>
      All Packages
      <% end %>
      <%= link_to edit_package_path(@package), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Package name:</p>
        <p><%= @package.package_name %></p>
      </li>
      <li>
        <p class="font-semibold">Description:</p>
        <p><%= @package.description %></p>
      </li>
      <li>
        <p class="font-semibold">Price:</p>
        <p><%= @package.price %></p>
      </li>
      <li>
        <p class="font-semibold">Duration:</p>
        <p><%= @package.duration %></p>
      </li>
      <li>
        <p class="font-semibold">Inclusions:</p>
        <p><%= @package.inclusions %></p>
      </li>
  </ul>
</div>
