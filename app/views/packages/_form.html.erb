<%= form_with(model: package) do |form| %>
<% if package.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(package.errors.count, "error") %> prohibited this package from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% package.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :package_name, class: label_class %>
          <%= form.text_field :package_name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :description, class: label_class %>
          <%= form.text_area :description, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :price, class: label_class %>
          <%= form.text_field :price, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :duration, class: label_class %>
          <%= form.number_field :duration, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :inclusions, class: label_class %>
          <%= form.text_field :inclusions, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if package.persisted? %>
<%= link_to "Cancel", package, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", packages_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
